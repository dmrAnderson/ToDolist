<% @items.each do |item| %>
  <div class="border bg-white rounded px-3 py-2 mb-2">
	  <div class="d-flex justify-content-between align-items-center">
      <h5 class="font-weight-bold mb-0"><%= link_to item.title, item %></h5>
      <small class="text-muted"><%= time_ago_in_words(item.created_at) %></small>
      <%= form_for(item, url: completed_item_url(item), method: :patch) do |f| %>
        <%= f.check_box :completed %>
        <%= f.submit "Done", class: "btn btn-light btn-sm" %>
    </div>
        <p class="mb-1"><%= item.description %></p>
      <% end %>
  </div>
<% end %>
