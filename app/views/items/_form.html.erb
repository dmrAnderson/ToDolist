<%= simple_form_for([@list, (params[:item_edit] ? @list.items.find(params[:item_edit]) : @list.items.build)],
                    html: { class: "border rounded bg-white px-3 py-3"}) do |f| %>
  <%= f.input :description, placeholder: "Maximum is 50 characters",
                            autofocus: (params[:item_edit] ? true : false) %>
  <%= f.button :submit, params[:item_edit] ? "Change" : "Create",
                        class: "btn btn-light btn-block" %>
<% end %>
