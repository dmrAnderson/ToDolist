<div class="list">
  <h2><%= @list.name %></h2> 
  <% unless @list.items.where(completed: false).any? %>
    <%= link_to @list, method: :delete do %>
      <i class="fa fa-lg fa-times"></i>
    <% end %>
  <% end %>
  <%= render "items/form" %>
  <%= render "items/reting" %>
  <%= render "layouts/flash" %>
  <%= render @items %>
</div>
  