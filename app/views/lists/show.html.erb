<div class="row">
  <div class="col-md-2 text-right pt-2">
    <%= link_to :root,
                class: "h3 text-decoration-none text-dark" do %>
      <i class="fa fa-lg fa-chevron-circle-left"></i>
    <% end %>
  </div>
  <h4 class="col-md-8 border rounded font-weight-bold
             bg-white text-center mb-2 p-3">
    <%= @list.name %>
  </h4> 
  <% unless @list.items.where(completed: false).any? %>
    <div class="col-md-2 pt-2">
      <%= link_to @list,
                  method: :delete,
                  class: "h4 text-decoration-none text-dark" do %>
        <i class="fa fa-lg fa-times"></i>
      <% end %>
    </div>
  <% end %>
</div>
<div class="col-md-10 offset-md-3 p-0 mb-2">
  <div class="row mt-2">
    <div class="col-md-5 p-0">
      <%= render "items/form" %>
    </div>
    <div class="col-md-2">
      <%= render "items/reting" %>
      <%= render "layouts/flash" %>
    </div>
  </div>
</div>
<div class="col-md-10 offset-md-1">
  <%= render @items %>
</div>
