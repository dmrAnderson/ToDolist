<div class="col-md-6 offset-md-3 rounded bg-white">
  <h2 class="text-center">Log in</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "btn btn-light btn-lg" %>
      <%- if devise_mapping.omniauthable? %>
        <%- resource_class.omniauth_providers.each do |provider| %>
          <%= link_to omniauth_authorize_path(resource_name, provider),
                      class: 'btn btn-light btn-lg' do %>
            Log in with Google <i class="fa fa-lg fa-google"></i>
          <% end %>
        <% end %>
      <% end %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
